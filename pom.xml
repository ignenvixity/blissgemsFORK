<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>dev.xoperr</groupId>
    <artifactId>BlissGems</artifactId>
    <version>3.1</version>
    <packaging>jar</packaging>

    <name>BlissGems</name>
    <description>Bliss SMP Gem System</description>

    <properties>
        <java.version>17</java.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <repositories>
        <!-- Paper/Spigot API -->
        <repository>
            <id>papermc</id>
            <url>https://repo.papermc.io/repository/maven-public/</url>
        </repository>
        <!-- PlaceholderAPI -->
        <repository>
            <id>placeholderapi</id>
            <url>https://repo.extendedclip.com/content/repositories/placeholderapi/</url>
        </repository>
    </repositories>

    <dependencies>
        <!-- Paper API (includes Bukkit/Spigot) -->
        <dependency>
            <groupId>io.papermc.paper</groupId>
            <artifactId>paper-api</artifactId>
            <version>1.21-R0.1-SNAPSHOT</version>
            <scope>provided</scope>
        </dependency>

        <!-- PlaceholderAPI -->
        <dependency>
            <groupId>me.clip</groupId>
            <artifactId>placeholderapi</artifactId>
            <version>2.11.6</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <finalName>BlissGems-${project.version}</finalName>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.11.0</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.3.0</version>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>dev.xoperr.blissgems.BlissGems</mainClass>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>

            <!-- ProGuard Obfuscation Plugin - Standalone -->
            <plugin>
                <groupId>com.github.wvengen</groupId>
                <artifactId>proguard-maven-plugin</artifactId>
                <version>2.6.1</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>proguard</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <obfuscate>true</obfuscate>
                    <injar>${project.build.finalName}.jar</injar>
                    <outjar>${project.build.finalName}-obfuscated.jar</outjar>
                    <libs>
                        <lib>${java.home}/jmods/java.base.jmod</lib>
                        <lib>${java.home}/jmods/java.desktop.jmod</lib>
                    </libs>
                    <options>
                        <!-- Don't shrink or optimize - only obfuscate -->
                        <option>-dontshrink</option>
                        <option>-dontoptimize</option>
                        <option>-dontwarn</option>
                        <option>-ignorewarnings</option>

                        <!-- Keep main plugin class and JavaPlugin extension -->
                        <option>-keep public class dev.xoperr.blissgems.BlissGems {
    public void onEnable();
    public void onDisable();
    public void onLoad();
    public protected *;
}</option>

                        <!-- Keep all Bukkit/Spigot required classes -->
                        <option>-keep public class * extends org.bukkit.plugin.java.JavaPlugin</option>
                        <option>-keep class * implements org.bukkit.event.Listener { *; }</option>
                        <option>-keep class * implements org.bukkit.command.CommandExecutor { *; }</option>
                        <option>-keep class * implements org.bukkit.command.TabCompleter { *; }</option>
                        <option>-keep class * implements org.bukkit.configuration.serialization.ConfigurationSerializable { *; }</option>

                        <!-- Keep enum methods that Bukkit/Java needs -->
                        <option>-keepclassmembers enum * {
    public static **[] values();
    public static ** valueOf(java.lang.String);
    **[] $VALUES;
    public *;
}</option>

                        <!-- Keep public API classes for other plugins -->
                        <option>-keep public class dev.xoperr.blissgems.BlissGems {
    public *;
}</option>
                        <option>-keep public class dev.xoperr.blissgems.utils.** {
    public *;
}</option>
                        <option>-keep public class dev.xoperr.blissgems.managers.** {
    public *;
}</option>
                        <option>-keep public enum dev.xoperr.blissgems.utils.GemType {
    *;
}</option>

                        <!-- Preserve annotations for Bukkit -->
                        <option>-keepattributes *Annotation*</option>

                        <!-- Keep line numbers for stack traces but remove variable names -->
                        <option>-keepattributes SourceFile,LineNumberTable</option>
                        <option>-keepattributes !LocalVariableTable,!LocalVariableTypeTable</option>

                        <!-- Obfuscation settings (safe for Paper) -->
                        <option>-allowaccessmodification</option>

                        <!-- Print mapping file for debugging (if needed) -->
                        <option>-printmapping ${project.build.directory}/proguard-mapping.txt</option>
                    </options>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
